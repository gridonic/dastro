---
import type {ClassValue, VideoAssetData} from "../component.types";

interface Props {
  data: VideoAssetData;
  class?: ClassValue;
  aspectRatio?: number;
  videoResolution?: 'low' | 'medium' | 'high';
}

const {
  data,
  videoResolution,
  aspectRatio,
  class: classNames,
  ...rest
} = Astro.props;

const video = data.video;

function getVideoUrl(): string | null {
  switch (videoResolution) {
    case 'low':
      return data.video?.urlLowRes ?? null;
    case 'medium':
      return data.video?.urlMediumRes ?? null;
    case 'high':
    default:
      return data.video?.urlHighRes ?? null;
  }
}
---

<div
  class="video-asset"
  class:list={[
    classNames,
    { '-fill-height': aspectRatio && aspectRatio < 1 }
  ]}
  {...rest}
  style={{ aspectRatio }}
>
  {
    video && (
      <video
        class="video"
        width={video.width}
        height={video.height}
        autoplay
        muted
        loop
        playsinline
        poster={video.thumbnailUrl}
      >
        <source src={getVideoUrl()} type="video/mp4" />
        Video is not supported
      </video>
    )
  }
</div>

